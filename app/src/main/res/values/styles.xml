<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CityPickerView"><attr format="color" name="title_background"/><attr format="color" name="text_confirm_color"/><attr format="color" name="text_cancel_color"/><attr format="color" name="wheel_color"/><attr format="color" name="wheel_text_color"/><attr format="dimension" name="wheel_text_size"/><attr format="dimension" name="title_text_size"/><attr format="dimension" name="title_action_size"/></declare-styleable>


    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


</resources>
